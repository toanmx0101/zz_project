%i.fa.fa-caret-down{"aria-hidden" => "true"}
%div{:class => "#{sort_column}-sort", :style => "position: absolute; bottom: 0;height: 50px;top: 44px;display: none;"}
  - if sort_column == "price"
    - submit_tag_higher = t('product.price_higher')
    - submit_tag_lower = t('product.price_lower')
  - elsif sort_column == "created_at"
    - submit_tag_higher = t('product.newer')
    - submit_tag_lower = t('product.older')
  = form_tag products_path, method: 'get' do
    = hidden_field_tag 'sort_column', sort_column
    = hidden_field_tag 'sort_type', 'DESC'
    = submit_tag submit_tag_lower
  = form_tag products_path, method: 'get' do
    = hidden_field_tag 'sort_column', sort_column
    = hidden_field_tag 'sort_type', 'ASC'
    = submit_tag submit_tag_higher
